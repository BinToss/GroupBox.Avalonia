{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "es2024",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "erasableSyntaxOnly": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "verbatimModuleSyntax": true
    },
    "exclude": [
        "node_modules",
        "GroupBox.Avalonia",
        "GroupBox.Avalonia.Sample",
        "publish",
        "artifacts"
    ],
    "files": [
        "./commitlint.config.ts",
        "./.releaserc.js",
        "./tools/formatXamlFiles.mjs",
        "./tools/updateReadMe.mjs"
    ]
}